<div class="modal modalUser" id="userProfile" tabindex="-1" role="dialog" aria-labelledby="userProfileTitle" aria-hidden="true">
  	<div class="modal-dialog" role="document">
    	<div class="modal-content">
      		<div class="modal-header">
        		<h4 class="modal-title" id="userProfileTitle">Edit Profile</h4>
        		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          		<span aria-hidden="true">&times;</span>
        		</button>
      		</div>
      		<div class="modal-body" id="childHolder">
				<form name="profile" action="" id="editProfile">

					<div class="modalUser__inputWrap">
						<input type="text" id="_usernameP" name="_username" value="" placeholder="{{ 'user.popup.username'|trans|desc('User name') }}" />
					</div>

					<div class="modalUser__inputWrap">
						<input type="email" id="_emailP" name="_email" value="" placeholder="{{ 'user.popup.email'|trans|desc('E-mail') }}" />
					</div>

					<div class="modalUser__inputWrap">
						<input type="text" id="_fnameP" name="_fname" value="" placeholder="{{ 'user.popup.email'|trans|desc('First name') }}" />
					</div>

					<div class="modalUser__inputWrap">
						<input type="text" id="_lnameP" name="_lname" value="" placeholder="{{ 'user.popup.email'|trans|desc('Last name') }}" />
					</div>


					<div class="modalUser__inputWrap">
						<textarea id="_aboutP" name="_about" placeholder="{{ 'user.popup.about'|trans|desc('About') }}"></textarea>
					</div>					           

					<div class="modalUser__inputWrap">
						<input type="password" id="_passwordP" name="_password" value="" placeholder="{{ 'user.popup.password'|trans|desc('Password') }}" />
					</div>   

					<div class="modalUser__inputWrap">
						<input type="password" id="_password2P" name="_password2" value="" placeholder="{{ 'user.popup.passwordConfirm'|trans|desc('Confirm password') }}" />
					</div>

					<div class="modalUser__inputWrap">
						<input type="submit" value="Save Profile" class="button button--color">
					</div>  

				</form>	

				<div id="editProfileResult" class="notification"></div>			

			</div>
		</div>
	</div>
</div>
